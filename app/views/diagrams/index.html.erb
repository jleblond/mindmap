<h2> My Diagrams </h2>
<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Diagram Name</th>
    <th scope="col">Description</th>
    <th scope="col" colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
    <% @diagrams.each do |diagram| %>
      <tr>
        <th scope="row"><%= diagram.id %></th>
        <td>
          <%= link_to edit_diagram_path(diagram) do %>
            <%= diagram.name %>
          <% end %>
        </td>
        <td><%= diagram.description %></td>

        <% if diagram.canvas %>
          <td>
            <%= link_to edit_diagram_canvas_path(diagram) do %>
              <i class="fas fa-pen-square"></i> Edit Background
            <% end %>
          </td>
          <td>
            <%= link_to draw_diagram_canvas_path(diagram) do %>
              <i class="fas fa-pencil-ruler"></i> Draw
            <% end %>
          </td>
          <td>
            <%= link_to diagram_canvas_path(diagram), target: "_blank" do %>
              <i class="fas fa-eye"></i> Preview
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to new_diagram_canvas_path(diagram) do %>
              <i class="far fa-file"></i> Start Canvas
            <% end %>
          </td>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

