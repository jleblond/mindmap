<%= link_to "Show Canvas", diagram_canvas_path(@canvas.diagram) %>



<% canvas_background_url =  @canvas.has_background? ? url_for(@canvas.background) : nil %>
<%= content_tag :canvas, '', id: 'myCanvas',
                data: {
                  canvas_action: 'DRAW',
                  background_src: canvas_background_url,
                  idea_url: diagram_canvas_ideas_path(@canvas.diagram),
                  diagram_id: @canvas.diagram.id,
                } %>

<%= content_tag :div, '', id: 'editIdea',
                data: {
                  diagram_id: @canvas.diagram.id,
                } %>

<%= javascript_pack_tag 'mindmap', 'data-turbolinks-track': 'reload' %>