<% canvas_background_url =  @canvas.has_background? ? url_for(@canvas.background) : nil %>
<div class="" style="display: flex;">
  <div class="" style="flex: 2;">
    <%= content_tag :canvas, '', id: 'myCanvas',
                    data: {
                      canvas_action: 'SHOW',
                      background_src: canvas_background_url,
                      idea_url: diagram_canvas_ideas_path(@canvas.diagram),
                      diagram_id: @canvas.diagram.id,
                    } %>
  </div>
  <div class="" style="flex: 1; padding-left: 10px;">
    <div class="card text-right" >
      <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <%= link_to "Edit Canvas", edit_diagram_canvas_path(@canvas.diagram) %>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'mindmap', 'data-turbolinks-track': 'reload' %>