MON FORM


<%= idea.id %>

<h2> IDEA Info </h2>
<%= form_for(idea, :url => { :action => "update" })  do |f| %>
  <div class="form-group">
    <%= f.label :label, "Label" %>
    <%= f.text_field :label, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.color_field :color, class:"form-control", cols: "30", rows: "7" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class:"form-control", cols: "30", rows: "7" %>
  </div>
  <div class="form-group">
    <%= f.label :url, "url" %>
    <%= f.text_field :url, class:"form-control" %>
  </div>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>

<%= link_to diagram_canvas_idea_path(idea.canvas.diagram, idea), method: :delete, data: { confirm: "Are you sure you want to delete this canvas?"}, class: "btn btn-xs btn-danger" do %>
  <i class="fas fa-trash-alt"></i> Delete
<% end %>