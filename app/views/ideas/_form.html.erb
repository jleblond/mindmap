<div class="card border-dark mb-3">
  <div class="card-body">
    <h5 class="card-title">IDEA</h5>
    <p class="card-text">
    <%= form_for(idea, :url => { :action => form_action })  do |f| %>
      <div class="form-group">
        <%= f.label :label, "Label" %>
        <%= f.text_field :label, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :url, "Link (URL)" %>
        <%= f.text_field :url, class:"form-control" %>
      </div>
<!--      <div class="form-group">-->
        <%#= f.label :background_color, "Background Color", class: "control-label" %>
<!--        <div style="width: 30%;">-->
          <%#= f.color_field :background_color, class:"form-control"%>
<!--        </div>-->
<!--      </div>-->
      <div class="form-group">
        <%= f.label :text_color, "Text Color", class: "control-label" %>
        <div style="width: 30%;">
          <%= f.color_field :text_color, class:"form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class:"form-control", cols: "30", rows: "3" %>
      </div>
      <%= f.submit "SAVE", class: "btn btn-primary" %>
    <% end %>

    <% if idea.persisted? %>
      <h6 style="margin-top:20px; text-align: right;">
        <%= link_to diagram_canvas_idea_path(idea.canvas.diagram, idea), method: :delete,
                    data: { confirm: "Are you sure you want to delete this idea and remove it from the canvas?"},
                    class: "text-danger" do %>
          Delete/Remove
        <% end %>
      </h6>

  <% end %>
    </p>
  </div>
</div>

